<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.Screen?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MainController">
    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <GridPane prefHeight="${screen.visualBounds.height}" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" percentWidth="20"/>
            <ColumnConstraints halignment="CENTER" percentWidth="20"/>
            <ColumnConstraints halignment="CENTER" percentWidth="20"/>
            <ColumnConstraints halignment="CENTER" percentWidth="20"/>
            <ColumnConstraints halignment="CENTER" percentWidth="20"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints valignment="CENTER" percentHeight="19"/>
            <RowConstraints valignment="CENTER" percentHeight="19"/>
            <RowConstraints valignment="CENTER" percentHeight="19"/>
            <RowConstraints valignment="CENTER" percentHeight="19"/>
            <RowConstraints valignment="CENTER" percentHeight="19"/>
        </rowConstraints>
        <Button fx:id="b0" onAction="#b0Pressed" GridPane.columnIndex="1"/>
        <Button fx:id="b1" onAction="#b1Pressed" GridPane.columnIndex="2"/>
        <Button fx:id="b2" onAction="#b2Pressed" GridPane.columnIndex="3"/>
        <Button fx:id="b3" onAction="#b3Pressed" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button fx:id="b4" onAction="#b4Pressed" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Button fx:id="b5" onAction="#b5Pressed" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <Button fx:id="b6" onAction="#b6Pressed" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button fx:id="b7" onAction="#b7Pressed" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <Button fx:id="b8" onAction="#b8Pressed" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
        <Button fx:id="b9" onAction="#b9Pressed" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button fx:id="b10" onAction="#b10Pressed" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Button fx:id="b11" onAction="#b11Pressed" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
        <Button fx:id="b12" onAction="#b12Pressed" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button fx:id="b13" onAction="#b13Pressed" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <Button fx:id="b14" onAction="#b14Pressed" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
        <Button onAction="#submit" text="Submit" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
        <Button onAction="#reset" text="Reset inputs" GridPane.rowIndex="2"/>
        <Button onAction="#home" text="Main Menu" GridPane.rowIndex="4" GridPane.columnIndex="4"/>
        <Label fx:id="MainLabel" text="Select a Set" GridPane.columnIndex="4" maxWidth="-Infinity"/>
        <Label fx:id="DeckLabel"/>
    </GridPane>
</VBox>