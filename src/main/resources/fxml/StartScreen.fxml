<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.stage.Screen?>
<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MainController" prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width}">
    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>
    <children>
      <Button onAction="#startGame" text="Click anywhere to start the game" prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width}"/>
   </children>
</AnchorPane>
